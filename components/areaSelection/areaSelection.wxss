/* components/areaSelection/areaSelection.wxss */
.area-selection {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 顶部固定 */
.area-header {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 4rpx;
  padding-left: 30rpx;
  width: 100%;
  height: 128rpx;
  background-color: #fff;
  font-size: 36rpx;
  color: #333;
}

/* 滚动内容 */
.area-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: calc(100vh - 132rpx);
  background-color: #fff;
}

.area-content .pl-30 {
  padding-left: 30rpx;
}

.area-content .mb-40 {
  margin-bottom: 40rpx;
}

.area-hot {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.area-hot__title {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 12px;
  color: #999;
}

.area-hot__buttons {
  margin-right: 40rpx;
  display: inline-block;
  width: 180rpx;
  height: 80rpx;
  background-color: #F0F0F0;
  border-radius: 4rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.area-country-initial {
  height: 56rpx;
  background-color: #F0F0F0;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #333;
}

.area-country {
  box-sizing: border-box;
  margin: 0 20rpx;
  height: 100rpx;
  padding-left: 10rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #EEE;
}

/* 右侧导航 */
.area-sider {
  position: absolute;
  top: 140rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.area-nav {
  width: 100%;
  font-size: 24rpx;
  line-height: 34rpx;
  text-align: center;
  color: #333;
}